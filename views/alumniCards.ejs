<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alumni Cards</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="./css/alumni.css">

</head>

<body>
  <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="col-md-9 col-lg-10 main-content">
      <header class="text-center my-4">
        <h1>Our Alumni</h1>
        <p>Meet our proud graduates shaping the future across industries!</p>
      </header>

      <section class="container mb-5">
        <div class="row g-2">
          <div class="col-md-3">
            <input type="text" id="searchName" class="form-control" placeholder="Search by Name">
          </div>
          <div class="col-md-3">
            <input type="text" id="searchBatch" class="form-control" placeholder="Search by Batch (e.g. 2023)">
          </div>
          <div class="col-md-3">
            <input type="text" id="searchJob" class="form-control" placeholder="Search by Job Title/Company">
          </div>
          <div class="col-md-3">
            <input type="text" id="searchLocation" class="form-control" placeholder="Search by Location (optional)">
          </div>
          <div class="col-md-3">
            <input type="text" id="searchBranch" class="form-control" placeholder="Search by Branch (optional)">
          </div>
          <div class="col-md-3">
            <input type="text" id="searchCompany" class="form-control" placeholder="Search by Company (optional)">
          </div>
        </div>
      </section>

      <main class="container alumni-container" id="alumniContainer">
        <!-- Alumni cards will be injected here -->
      </main>

      <!-- Modal -->
      <div class="modal fade" id="alumniModal" tabindex="-1" aria-labelledby="alumniModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="alumniModalLabel">Alumni Details</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="modal-body-content">
                <div class="card-top-banner">
                  <img id="alumniImage" src="" alt="Alumni Image" class="profile-pic">
                </div>
                <div class="details-section">
                  <h4 id="alumniName"></h4>
                  <p><strong>Batch:</strong> <span id="alumniBatch"></span></p>
                  <p><strong>Branch:</strong> <span id="alumniBranch"></span></p>
                  <p><strong>Company:</strong> <span id="alumniCompany"></span></p>
                  <p><strong>Job Title:</strong> <span id="alumniJobTitle"></span></p>
                  <p><strong>Location:</strong> <span id="alumniLocation"></span></p>
                  <div class="links">
                    <a id="alumniLinkedin" href="" target="_blank" class="connect-btn">LinkedIn</a>
                    <a id="alumniGithub" href="" target="_blank" class="connect-btn github">GitHub</a>
                  </div>
                </div>
              </div>

              <div id="achievementsContainer" class="achievements-section">
                <!-- Achievements will come here dynamically -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./js/script.js"></script>
</body>

</html>